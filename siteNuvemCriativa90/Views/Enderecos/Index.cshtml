@model IEnumerable<siteNuvemCriativa90.Models.Endereco>

@{
    ViewData["Title"] = "Endereços";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Work+Sans:400,700,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/jquery-ui.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="~/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/fonts/flaticon/font/flaticon.css">
    <link rel="stylesheet" href="~/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/css/aos.css">
    <link rel="stylesheet" href="~/css/cad.own.view.css">
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body>
    <p>
        <a asp-action="Relatorio_de_Endereco">Gerar Relatório</a>
    </p>
    <p>
        <a asp-action="Cadastrar">Criar novo Endereco</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th style="text-align:center">
                    @Html.DisplayNameFor(model => model.Cidade)
                </th>
                <th style="text-align:center">
                    @Html.DisplayNameFor(model => model.UF)
                </th>
                <th style="text-align:center">
                    @Html.DisplayNameFor(model => model.Logradouro)
                </th>
                <th style="text-align:center">
                    @Html.DisplayNameFor(model => model.Numero)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.Cidade)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.UF)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.Logradouro)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(modelItem => item.Numero)
                    </td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@item.IDEndereco" class="icon-edit"></a>
                        <a asp-action="Detalhes" asp-route-id="@item.IDEndereco" class="icon-list"></a>
                        <a asp-action="Excluir" asp-route-id="@item.IDEndereco" class="icon-remove"></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/jquery-ui.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.countdown.min.js"></script>
    <script src="~/js/jquery.easing.1.3.js"></script>
    <script src="~/js/aos.js"></script>
    <script src="~/js/jquery.fancybox.min.js"></script>
    <script src="~/js/jquery.sticky.js"></script>
    <script src="~/js/isotope.pkgd.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/slider.js"></script>
</body>
</html>
