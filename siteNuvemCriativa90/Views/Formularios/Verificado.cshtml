@model siteNuvemCriativa90.Models.Formulario

@{
    ViewData["Title"] = "Verificação";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head lang="pt-br">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Work+Sans:400,700,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/jquery-ui.css">
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="~/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/fonts/flaticon/font/flaticon.css">
    <link rel="stylesheet" href="~/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/css/aos.css">
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/slider.css">
    <link rel="stylesheet" href="~/css/cad.own.view.css">
</head>
<body>
    <h4>Identificação de verificação - Formulário</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Verificado">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IDFormulario" />

                <div class="form-group">
                    <input type="hidden" asp-for="Nome" class="form-control" />
                </div>

                <div class="form-group">
                    <input type="hidden" asp-for="Sobrenome" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="Telefone" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="Necessidade" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="Ramo" class="form-control" />
                </div>

                <label class="control-label"> Verificação </label>
                <select asp-for="Verificado" class="custom-select" id="txtVerificado" required>
                    <option asp-for="Verificado" value="N">N</option>
                    <option asp-for="Verificado" value="S">S</option>
                </select>
                <div class="form-group">
                    <input type="hidden" asp-for="DataCadastro" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-secondary" />
                    <button asp-action="Index" value="Voltar" class="btn btn-secondary" style="margin-left:5px;">Voltar</button>
                </div>
            </form>
        </div>
    </div>

    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/jquery-ui.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.countdown.min.js"></script>
    <script src="~/js/jquery.easing.1.3.js"></script>
    <script src="~/js/aos.js"></script>
    <script src="~/js/jquery.fancybox.min.js"></script>
    <script src="~/js/jquery.sticky.js"></script>
    <script src="~/js/isotope.pkgd.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/slider.js"></script>
</body>
</html>